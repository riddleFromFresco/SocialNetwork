<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sw">

    <application
        android:name=".application.SocialNetworkApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SW">
        <activity
            android:name=".account_operations.LoginMenu"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:parentActivityName=".account_operations.LoginMenu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".account_operations.LoginMenu" />
        </activity>
        <activity android:name=".account_operations.SignUpMenu"
            android:parentActivityName=".account_operations.LoginMenu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".account_operations.SignUpMenu" />
        </activity>
        <activity android:name=".chat_list.ChatsListMenu"
            android:parentActivityName=".account_operations.LoginMenu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".chat_list.ChatsListMenu" />
        </activity>
        <activity android:name=".chat.Chat"
            android:parentActivityName=".chat_list.ChatsListMenu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".chat.Chat" />
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>